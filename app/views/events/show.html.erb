<h1> Event Details </h1>
<p>
  <strong>Event:</strong>
  <%= @event.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>
<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>
<p>
  <strong>Date:</strong>
  <%= @event.event_date %>
</p>

<h4>List of attendees</h4>
<% if user_signed_in? %>
  <% @event.attendees.each do |attendee| %>
      <%= attendee %>
  <% end %>
<% else %>
  <p>Can't event see attendees</p>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
